# Server Configuration
PORT=3000
NODE_ENV=development
CORS_ORIGIN=*
LOG_LEVEL=info

# MongoDB Configuration
# Use a connection string without a database name if using the multi-tenant architecture
# The platform_db and client databases will be handled automatically.
MONGODB_URI=mongodb://localhost:27017

# JWT Configuration
# Generate a strong secret (min 32 characters)
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRE=7d

# Email (SMTP) Configuration
# Required for sending invoices and OTPs
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=

# Platform Admin Initial Credentials
# Used by the seed script (npm run seed)
PLATFORM_ADMIN_EMAIL=admin@bookacut.com
PLATFORM_ADMIN_PASSWORD=ChangeThisPassword123!

# Business Logic Defaults
DEFAULT_SLOT_DURATION_MINUTES=30
BOOKING_ADVANCE_DAYS=7
NO_SHOW_TIMEOUT_MINUTES=5
DEFAULT_WORKING_HOURS_START=09:00
DEFAULT_WORKING_HOURS_END=18:00

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development Tools
CREATE_SAMPLE_CLIENT=false
