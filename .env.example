
# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/platform_db

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# CORS Configuration
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# Booking Configuration
BOOKING_ADVANCE_DAYS=7
NO_SHOW_TIMEOUT_MINUTES=5

# Shop Defaults
DEFAULT_SLOT_DURATION_MINUTES=30
DEFAULT_WORKING_HOURS_START=09:00
DEFAULT_WORKING_HOURS_END=18:00

# Other Configuration
CREATE_SAMPLE_TENANT=false
LOG_LEVEL=info

# Platform Admin
PLATFORM_ADMIN_EMAIL=admin@bookacut.com
PLATFORM_ADMIN_PASSWORD=Admin@bookacut

# Development Tools
CREATE_SAMPLE_CLIENT=true

# Client Admin
CLIENT_ADMIN_EMAIL=clientadmin@sample.com
CLIENT_ADMIN_PASSWORD=ClientAdmin@sample
